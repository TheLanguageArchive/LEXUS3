    <body onload="setFocus(); writebanner(); displayMessage();" onunload="stoptimer()">

        <marquee direction="left" scrolldelay="1" style="x:0; y:0; width=100%; height=80; color:#ff0000; font-size:60pt; 
            text-shadow : #000 0px 0px 5px;"

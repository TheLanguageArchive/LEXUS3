<map:sitemap xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apache.org/cocoon/sitemap/1.0 http://cocoon.apache.org/schema/sitemap/cocoon-sitemap-1.0.xsd"
  xmlns:map="http://apache.org/cocoon/sitemap/1.0">


  <map:pipelines>


    <!--+
        | Queries pipelines
        +-->
    <map:pipeline id="queries" type="caching">

      <!-- 
        Generate queries list.
      -->
      <map:match pattern="getQueries.xml">
        <map:generate src="service-consumer:"/>
        <map:transform type="saxon" src="getQueries.xslt">
          <map:parameter name="lexica-collection" value="${xmldb.rest.lexica-collection}"/>
          <map:parameter name="users-collection" value="${xmldb.rest.users-collection}"/>
        </map:transform>
        <map:transform type="saxon" src="../${xmldb.rest.transformer}">
          <map:parameter name="endpoint" value="${xmldb.rest.endpoint}"/>
        </map:transform>
        <map:transform type="rest">
          <map:parameter name="username" value="${xmldb.rest.username}"/>
          <map:parameter name="password" value="${xmldb.rest.password}"/>
        </map:transform>
        <map:transform type="saxon" src="../../util/extractDataFromRestResponse.xslt"/>
        <map:serialize type="xml"/>
      </map:match>


      <!--
          Returns the list of DC necessary for constructing a query.
          -->
      <map:match pattern="getDataCategories.xml">
        <map:generate src="service-consumer:"/>
        <map:transform type="saxon" src="getDataCategories.xslt">
          <map:parameter name="lexica-collection" value="${xmldb.rest.lexica-collection}"/>
          <map:parameter name="users-collection" value="${xmldb.rest.users-collection}"/>
        </map:transform>
        <map:transform type="${tee}" src="{naming:java:comp/env/tee-folder}debug-info/back-getdc-pre.xml"/>
        <map:transform type="saxon" src="../${xmldb.rest.transformer}">
          <map:parameter name="endpoint" value="${xmldb.rest.endpoint}"/>
        </map:transform>
        <map:transform type="rest">
          <map:parameter name="username" value="${xmldb.rest.username}"/>
          <map:parameter name="password" value="${xmldb.rest.password}"/>
        </map:transform>
        <map:transform type="saxon" src="../../util/extractDataFromRestResponse.xslt"/>
        <map:transform type="${tee}" src="{naming:java:comp/env/tee-folder}debug-info/back-getdc-post.xml"/>
        <map:serialize type="xml"/>
      </map:match>


      <!-- 
        Save query.
      -->
      <map:match pattern="saveQuery.xml">
        <map:generate src="service-consumer:"/>
        <map:transform type="saxon" src="saveQuery.xslt">
          <map:parameter name="lexica-collection" value="${xmldb.rest.lexica-collection}"/>
          <map:parameter name="users-collection" value="${xmldb.rest.users-collection}"/>
        </map:transform>
        <map:transform type="${tee}" src="{naming:java:comp/env/tee-folder}debug-info/back-save-query-1.xml"/>
        <map:transform type="saxon" src="../${xmldb.rest.transformer}">
          <map:parameter name="endpoint" value="${xmldb.rest.endpoint}"/>
        </map:transform>
        <map:transform type="rest">
          <map:parameter name="username" value="${xmldb.rest.username}"/>
          <map:parameter name="password" value="${xmldb.rest.password}"/>
        </map:transform>
        <map:transform type="saxon" src="../../util/extractDataFromRestResponse.xslt"/>
        <map:transform type="${tee}" src="{naming:java:comp/env/tee-folder}debug-info/back-save-query-2.xml"/>
        <map:serialize type="xml"/>
      </map:match>
      
      
      <!-- 
        Save query.
      -->
      <map:match pattern="deleteQuery.xml">
        <map:generate src="service-consumer:"/>
        <map:transform type="saxon" src="deleteQuery.xslt">
          <map:parameter name="users-collection" value="${xmldb.rest.users-collection}"/>
        </map:transform>
        <map:transform type="${tee}" src="{naming:java:comp/env/tee-folder}debug-info/back-pre.xml"/>
        <map:transform type="saxon" src="../${xmldb.rest.transformer}">
          <map:parameter name="endpoint" value="${xmldb.rest.endpoint}"/>
        </map:transform>
        <map:transform type="rest">
          <map:parameter name="username" value="${xmldb.rest.username}"/>
          <map:parameter name="password" value="${xmldb.rest.password}"/>
        </map:transform>
        <map:transform type="saxon" src="../../util/extractDataFromRestResponse.xslt"/>
        <map:transform type="${tee}" src="{naming:java:comp/env/tee-folder}debug-info/back-post.xml"/>
        <map:serialize type="xml"/>
      </map:match>
      
      <!--
          Run a query.
          -->
      <map:match pattern="search.xml">
        <map:generate src="service-consumer:"/>
        
        <map:transform type="saxon" src="../../lexicon/getMetaForLexicaInQuery.xslt">
          <map:parameter name="lexica-collection" value="${xmldb.rest.lexica-collection}"/>
        </map:transform>
        <map:transform type="${tee}" src="{naming:java:comp/env/tee-folder}debug-info/back-sq-1.xml"/>
        <map:transform type="saxon" src="../${xmldb.rest.transformer}">
          <map:parameter name="endpoint" value="${xmldb.rest.endpoint}"/>
        </map:transform>
        <map:transform type="${tee}" src="{naming:java:comp/env/tee-folder}debug-info/back-sq-2.xml"/>
        <map:transform type="rest">
          <map:parameter name="username" value="${xmldb.rest.username}"/>
          <map:parameter name="password" value="${xmldb.rest.password}"/>
        </map:transform>
        <map:transform type="saxon" src="../../util/extractDataFromRestResponse.xslt"/>
        <map:transform type="saxon" src="../../util/stripLexusResult.xslt"/>
        <map:transform type="${tee}" src="{naming:java:comp/env/tee-folder}debug-info/back-sq-3.xml"/>
        
        <map:transform type="saxon" src="searchQuery.xslt">
          <map:parameter name="lexica-collection" value="${xmldb.rest.lexica-collection}"/>
          <map:parameter name="users-collection" value="${xmldb.rest.users-collection}"/>
        </map:transform>
        <map:transform type="${tee}" src="{naming:java:comp/env/tee-folder}debug-info/back-sq-4.xml"/>
        <map:transform type="saxon" src="../${xmldb.rest.transformer}">
          <map:parameter name="endpoint" value="${xmldb.rest.endpoint}"/>
        </map:transform>
        <map:transform type="rest">
          <map:parameter name="username" value="${xmldb.rest.username}"/>
          <map:parameter name="password" value="${xmldb.rest.password}"/>
        </map:transform>
        <map:transform type="saxon" src="../../util/extractDataFromRestResponse.xslt"/>
        <map:transform type="saxon" src="../../lexicon/removeMetaForLexicaInQuery.xslt"/>
        <map:transform type="${tee}" src="{naming:java:comp/env/tee-folder}debug-info/back-sq-5.xml"/>
        <map:serialize type="xml"/>
      </map:match>
    </map:pipeline>

  </map:pipelines>

</map:sitemap>

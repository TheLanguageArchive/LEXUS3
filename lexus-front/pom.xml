                                <exclude>.svn</exclude>
                                <exclude>.svn/*</exclude>
                            </excludes>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                        <fileset>
                            <directory>debug-info</directory>
                            <excludes>
                                <exclude>.svn</exclude>
                                <exclude>.svn/*</exclude>
                            </excludes>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                    </filesets>
                </configuration>

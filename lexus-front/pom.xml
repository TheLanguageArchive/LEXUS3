        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <!-- Do not filter in general, e.g. Flex source files do not like that. -->
                <filtering>false</filtering>
            </resource>
            <resource>
                <directory>src/main/resources/COB-INF/resource/internal</directory>
                <filtering>true</filtering>
                <targetPath>${project.build.outputDirectory}/COB-INF/resource/internal</targetPath>
                <includes>
                    <include>**/aboutLexus.xml</include>
                    <include>**/index.xml</include>
                </includes>
            </resource>
            <resource>
                <targetPath>${project.build.outputDirectory}/rcl-conf/</targetPath>
                <filtering>true</filtering>
                <directory>${basedir}/src/main/etc</directory>
                <includes>
                	<include>log4j.xml</include>
                </includes>
            </resource>
        </resources>

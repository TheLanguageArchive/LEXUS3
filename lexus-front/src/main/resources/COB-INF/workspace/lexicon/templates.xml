<templates xmlns="http://www.mpi.nl/lexus">
        <template version="1.0" name="Default Template" id="template1"
            description="The default lexicon structure of LEXUS 2.">
            <schema>
                <container id="schema-l-id" admin-info="" mandatory="true" multiple="false"
                    description="The container for all the lexical entries of a source language within the database. A Lexicon must contain at least one lexical entry"
                    name="Lexicon" type="lexicon">
                    <container id="schema-le-id" admin-info="" mandatory="true" multiple="true"
                        description="Represents a word, a multi-word expression, or an affix in a given language"
                        name="Lexical Entry" type="lexical-entry">
                        <container id="schema-form-id" admin-info="" mandatory="true" multiple="true"
                            description="Represents one lexical variant of the written or spoken form of the lexical entry"
                            name="Form" type="container">
                            <datacategory id="schema-lexeme-id" admin-info=""
                                description="Main word of the lexical entry" mandatory="true"
                                multiple="false" name="Lexeme" type="data"
                                reference="http://www.isocat.org/datcat/DC-1325" registry="12620"/>
                        </container>
                        <container id="schema-sense-id" admin-info="" mandatory="false" multiple="true"
                            description="Contains attributes that describe meanings of a lexical entry"
                            name="Sense" type="container"/>
                    </container>
                </container>
            </schema>
            <views listView="listViewId" lexicalEntryView="leViewId">
                <view id="listViewId" type="dsl_view" isBranch="true" name="List view"
                    description="Created by Lexus.">
                    <style/>
                    <structure isBranch="true">
                        <show optional="false" isBranch="true" type="dsl_show" name="Decorator"
                            dsl_class="">
                            <data isBranch="false" type="data category" name="Data Category"
                                id="schema-lexeme-id"/>
                        </show>
                    </structure>
                </view>
                <view id="leViewId" isBranch="true" name="Lexical Entry View"
                    description="Created by Lexus." type="dsl_view">
                    <style type="dsl_style"> body { background-color : #333333; } .lexeme { font-size :
                    20pt; color : grey; }</style>
                    <structure isBranch="true">
                        <show type="dsl_show" name="Decorator" isBranch="true" dsl_class="lexeme"
                            optional="false" block="false" localStyle="false">
                            <data isBranch="false" type="data category" name="Data Category"
                                id="schema-lexeme-id"/>
                        </show>
                    </structure>
                </view>
            </views>
  </template>
    <template version="1.0" name="Template a" id="template2" description="Simplified LMF based Schema">
        <schema>
            <container id="schema-l-id" admin-info="" mandatory="true" multiple="false"
                description="The container for all the lexical entries of a source language within the database. A Lexicon must contain at least one lexical entry"
                name="Lexicon" type="lexicon">

                <container id="schema-le-id" admin-info="" mandatory="true" multiple="true"
                    description="Represents a word, a multi-word expression, or an affix in a given language"
                    name="Lexical Entry" type="lexical-entry">
                    <container id="schema-lemma-id" admin-info="" mandatory="true" multiple="true"
                        description="Represents a word form chosen by convention to designate the Lexical Entry"
                        name="Lemma" type="container">
                        <container id="schema-lemma-form-representation-id" admin-info=""
                            mandatory="false" multiple="true"
                            description="Represents one variant orthography of a Form for a Lemma"
                            name="Form Representation" type="container">
                            <datacategory id="schema-lemma-written-form-id" admin-info=""
                                mandatory="false" multiple="true"
                                description="Represents the written form of the Form Representaion for Lemma"
                                name="written form" type="data"/>
                        </container>
                        <container id="schema-sense-id" admin-info="" mandatory="false"
                            multiple="true"
                            description="Contains attributes that describe meanings of a lexical entry"
                            name="Sense" type="container">
                            <container id="schema-definition-id" admin-info="" mandatory="false"
                                multiple="true"
                                description="Represents a narrative description of a Sense"
                                name="Definition" type="container">
                                <container id="schema-definition-text-representation-id"
                                    admin-info="" mandatory="false" multiple="true"
                                    description="Represents one textual content of Definition"
                                    name="Text Representation" type="container">
                                    <datacategory id="schema-definition-text-representaion-text-id"
                                        admin-info="" mandatory="true" multiple="true"
                                        description="the actual text" name="text" type="data"/>
                                </container>
                            </container>
                        </container>
                    </container>
                </container>
            </container>
        </schema>
        <views listView="listViewId" lexicalEntryView="leViewId">
            <view id="listViewId" type="dsl_view" isBranch="true" name="List view"
                description="Created by Lexus.">
                <style/>
                <structure isBranch="true">
                    <show optional="false" isBranch="true" type="dsl_show" name="Decorator"
                        dsl_class="">
                        <data isBranch="false" type="data category" name="Data Category"
                            id="schema-lemma-written-form-id"/>
                    </show>
                </structure>
            </view>
            <view id="leViewId" isBranch="true" name="Lexical Entry View"
                description="Created by Lexus." type="dsl_view">
                <style type="dsl_style"> body { background-color : #333333; } .lexeme { font-size :
                    20pt; color : grey; }</style>
                <structure isBranch="true">
                    <show type="dsl_show" name="Decorator" isBranch="true" dsl_class="lexeme"
                        optional="false" block="false" localStyle="false">
                        <data isBranch="false" type="data category" name="Data Category"
                            id="schema-lemma-written-form-id"/>
                    </show>
                </structure>
            </view>
        </views>
    </template>
    <template version="1.0" name="Template b" id="template3" description="Alternative Structure">
        <schema>
            <container id="schema-l-id" admin-info="" mandatory="true" multiple="false"
                description="The container for all the lexical entries of a source language within the database. A Lexicon must contain at least one lexical entry"
                name="Lexicon" type="lexicon">
                <container id="schema-le-id" admin-info="" mandatory="true" multiple="true"
                    description="Represents a word, a multi-word expression, or an affix in a given language"
                    name="Lexical Entry" type="lexical-entry">
                    <container id="schema-lexeme-group-id" admin-info="" mandatory="true"
                        multiple="true"
                        description="Represents one lexical variant of the written or spoken form of the lexical entry"
                        name="Lexeme Group" type="container">
                        <datacategory id="schema-lexeme-id" admin-info="" mandatory="false"
                            multiple="true"
                            description="The Record marker for each record in a lexical entry. It contains the lexeme or headword (which is commonly mono-morphemic). Since such a lexeme form is often not accessible for vernacular speakers if printed, use the \lc field to provide a more readable form for vernacular speakers."
                            name="Lexeme" type="data"/>
                        <datacategory id="schema-homonym-num-id" admin-info="" mandatory="false"
                            multiple="true"
                            description="Used to differentiate homonym entries (lexemes that are spelled the same but have no semantic relationship). This field comes directly after the \lx field and simply contains a number, e.g. 1, 2, or 3, etc. Use a Character Range Set."
                            name="Homonym number" type="data"/>
                        <datacategory id="schema-form-id" admin-info=""
                            description="phonetic form of the main entry" name="Phonetic form"
                            mandatory="false" multiple="true" type="data"/>
                        <datacategory id="schema-part-of-speech-id" admin-info=""
                            description="part of speech of the main entry" name="Part of Speech"
                            mandatory="false" multiple="true" type="data"/>
                        <container id="schema-definition-group-id" mandatory="false" multiple="true" name="Definition Group" type="container"
                            admin-info="">
                            <datacategory id="schema-definition-id" admin-info=""
                                description="definition of the main entry" name="Definition"
                                mandatory="false" multiple="true" type="data"/>
                            <datacategory id="schema-image-id" admin-info="" description="image"
                                name="image" mandatory="false" multiple="true" type="data"/>
                            <datacategory id="schema-note-id" admin-info=""
                                description="additional note" name="note" mandatory="false"
                                multiple="true" type="data"/>
                        </container>
                    </container>
                </container>
            </container>
        </schema>
        <views listView="listViewId" lexicalEntryView="leViewId">
            <view id="listViewId" type="dsl_view" isBranch="true" name="List view"
                description="Created by Lexus.">
                <style/>
                <structure isBranch="true">
                    <show optional="false" isBranch="true" type="dsl_show" name="Decorator"
                        dsl_class="">
                        <data isBranch="false" type="data category" name="Data Category"
                            id="schema-lexeme-id"/>
                    </show>
                </structure>
            </view>
            <view id="leViewId" isBranch="true" name="Lexical Entry View"
                description="Created by Lexus." type="dsl_view">
                <style type="dsl_style"> body { background-color : #333333; } .lexeme { font-size :
                    20pt; color : grey; }</style>
                <structure isBranch="true">
                    <show type="dsl_show" name="Decorator" isBranch="true" dsl_class="lexeme"
                        optional="false" block="false" localStyle="false">
                        <data isBranch="false" type="data category" name="Data Category"
                            id="schema-lexeme-id"/>
                    </show>
                </structure>
            </view>
        </views>
    </template>
</templates>

<map:sitemap xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apache.org/cocoon/sitemap/1.0 http://cocoon.apache.org/schema/sitemap/cocoon-sitemap-1.0.xsd"
  xmlns:map="http://apache.org/cocoon/sitemap/1.0">


  <map:pipelines>


    <!--+
        | Workspace pipelines
        +-->
    <map:pipeline id="schema-editor">


      <!-- 
          Generate schema.
          -->
      <map:match pattern="getSchema.xml">
        <map:generate src="service-consumer:"/>
<!--        <map:transform type="tee" src="debug-info/back-pre.xml"/>-->
        <map:transform type="saxon" src="getSchema.xslt">
          <map:parameter name="lexica-collection" value="${xmldb.rest.lexica-collection}"/>
        </map:transform>
        <map:transform type="saxon" src="${xmldb.rest.transformer}">
          <map:parameter name="endpoint" value="${xmldb.rest.endpoint}"/>
        </map:transform>
        <map:transform type="rest">
          <map:parameter name="username" value="${xmldb.rest.username}"/>
          <map:parameter name="password" value="${xmldb.rest.password}"/>
        </map:transform>
        <map:transform src="../util/extractDataFromRestResponse.xslt"/>
<!--        <map:transform type="tee" src="debug-info/back-post.xml"/>-->
        <map:serialize type="xml"/>
      </map:match>


      <!-- 
        Save schema.
      -->
      <map:match pattern="saveSchema.xml">
        <map:generate src="service-consumer:"/>
        <map:transform type="saxon" src="saveSchema.xslt">
          <map:parameter name="lexica-collection" value="${xmldb.rest.lexica-collection}"/>
          <map:parameter name="users-collection" value="${xmldb.rest.users-collection}"/>
        </map:transform>
        <map:transform type="saxon" src="${xmldb.rest.transformer}">
          <map:parameter name="endpoint" value="${xmldb.rest.endpoint}"/>
        </map:transform>
        <map:transform type="tee" src="debug-info/back-pre.xml"/>
        <map:transform type="rest">
          <map:parameter name="username" value="${xmldb.rest.username}"/>
          <map:parameter name="password" value="${xmldb.rest.password}"/>
        </map:transform>
        <map:transform src="../util/extractDataFromRestResponse.xslt"/>
        <map:transform type="tee" src="debug-info/back-post.xml"/>
        <map:serialize type="xml"/>
      </map:match>
      
      
      <!-- 
        Save schema.
      -->
      <map:match pattern="updateLexicaForUpdatedSchema.xml">
        <map:generate src="service-consumer:"/>
        <map:transform type="saxon" src="updateLexicaForUpdatedSchema.xslt">
          <map:parameter name="lexica-collection" value="${xmldb.rest.lexica-collection}"/>
          <map:parameter name="users-collection" value="${xmldb.rest.users-collection}"/>
        </map:transform>
        <map:transform type="saxon" src="${xmldb.rest.transformer}">
          <map:parameter name="endpoint" value="${xmldb.rest.endpoint}"/>
        </map:transform>
        <map:transform type="tee" src="debug-info/back-pre.xml"/>
        <map:transform type="rest">
          <map:parameter name="username" value="${xmldb.rest.username}"/>
          <map:parameter name="password" value="${xmldb.rest.password}"/>
        </map:transform>
        <map:transform src="../util/extractDataFromRestResponse.xslt"/>
        <map:transform type="tee" src="debug-info/back-post.xml"/>
        <map:serialize type="xml"/>
      </map:match>



      <!-- 
        Create a view.
      -->
      <map:match pattern="saveView.xml">
        <map:generate src="service-consumer:"/>
        <map:transform type="saxon" src="saveView.xslt">
          <map:parameter name="lexica-collection" value="${xmldb.rest.lexica-collection}"/>
          <map:parameter name="users-collection" value="${xmldb.rest.users-collection}"/>
        </map:transform>
        <map:transform type="saxon" src="${xmldb.rest.transformer}">
          <map:parameter name="endpoint" value="${xmldb.rest.endpoint}"/>
        </map:transform>
        <map:transform type="tee" src="debug-info/back-pre.xml"/>
        <map:transform type="rest">
          <map:parameter name="username" value="${xmldb.rest.username}"/>
          <map:parameter name="password" value="${xmldb.rest.password}"/>
        </map:transform>
        <map:transform src="../util/extractDataFromRestResponse.xslt"/>
        <map:transform type="tee" src="debug-info/back-post.xml"/>
        <map:serialize type="xml"/>
      </map:match>
      
      
      <!-- 
        Get all views of a lexicon.
      -->
      <map:match pattern="getViews.xml">
        <map:generate src="service-consumer:"/>
        <map:transform type="saxon" src="getViews.xslt">
          <map:parameter name="lexica-collection" value="${xmldb.rest.lexica-collection}"/>
          <map:parameter name="users-collection" value="${xmldb.rest.users-collection}"/>
        </map:transform>
        <map:transform type="saxon" src="${xmldb.rest.transformer}">
          <map:parameter name="endpoint" value="${xmldb.rest.endpoint}"/>
        </map:transform>
        <map:transform type="tee" src="debug-info/back-pre.xml"/>
        <map:transform type="rest">
          <map:parameter name="username" value="${xmldb.rest.username}"/>
          <map:parameter name="password" value="${xmldb.rest.password}"/>
        </map:transform>
        <map:transform src="../util/extractDataFromRestResponse.xslt"/>
        <map:transform type="tee" src="debug-info/back-post.xml"/>
        <map:serialize type="xml"/>
      </map:match>
      
      
      
      <!-- 
        Get a view.
      -->
      <map:match pattern="getView.xml">
        <map:generate src="service-consumer:"/>
        <map:transform type="saxon" src="getView.xslt">
          <map:parameter name="lexica-collection" value="${xmldb.rest.lexica-collection}"/>
          <map:parameter name="users-collection" value="${xmldb.rest.users-collection}"/>
        </map:transform>
        <map:transform type="saxon" src="${xmldb.rest.transformer}">
          <map:parameter name="endpoint" value="${xmldb.rest.endpoint}"/>
        </map:transform>
        <map:transform type="tee" src="debug-info/back-pre.xml"/>
        <map:transform type="rest">
          <map:parameter name="username" value="${xmldb.rest.username}"/>
          <map:parameter name="password" value="${xmldb.rest.password}"/>
        </map:transform>
        <map:transform src="../util/extractDataFromRestResponse.xslt"/>
        <map:transform type="tee" src="debug-info/back-post.xml"/>
        <map:serialize type="xml"/>
      </map:match>
      
      
      <!-- 
        Delete a view.
      -->
      <map:match pattern="deleteView.xml">
        <map:generate src="service-consumer:"/>
        <map:transform type="saxon" src="deleteView.xslt">
          <map:parameter name="lexica-collection" value="${xmldb.rest.lexica-collection}"/>
          <map:parameter name="users-collection" value="${xmldb.rest.users-collection}"/>
        </map:transform>
        <map:transform type="saxon" src="${xmldb.rest.transformer}">
          <map:parameter name="endpoint" value="${xmldb.rest.endpoint}"/>
        </map:transform>
        <map:transform type="tee" src="debug-info/back-pre.xml"/>
        <map:transform type="rest">
          <map:parameter name="username" value="${xmldb.rest.username}"/>
          <map:parameter name="password" value="${xmldb.rest.password}"/>
        </map:transform>
        <map:transform src="../util/extractDataFromRestResponse.xslt"/>
        <map:transform type="tee" src="debug-info/back-post.xml"/>
        <map:serialize type="xml"/>
      </map:match>
      
    </map:pipeline>



  </map:pipelines>

</map:sitemap>
